<h1>Listing Routes</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Pool count</th>
    <th>Income</th>
    <th>Sale price</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.location %></td>
    <td><%= route.pool_count %></td>
    <td><%= route.income %></td>
    <td><%= route.sale_price %></td>
    <td><%= route.status %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

